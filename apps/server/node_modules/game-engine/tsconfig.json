{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",

    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ES2020"],

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "verbatimModuleSyntax": false
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}